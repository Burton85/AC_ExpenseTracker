<div class="a container mb-5">

  <form action="/" class="d-inline row">
    <select class="col-6 custom-select text-center" name='category' onchange="this.form.submit()">
      <option disabled selected style="background-color: darkgray;" value={{#if category}}{{category}}
        {{else}}類別{{/if}}>{{#if category}}{{category}}
        {{else}}類別{{/if}}
      </option>
      <option value="家居物業">家居物業</option>
      <option value="交通出行">交通出行</option>
      <option value="休閒娛樂">休閒娛樂</option>
      <option value="餐飲食品">餐飲食品</option>
      <option value="其他">其他</option>
    </select>
    <select class="col-6 custom-select text-center" name='month' onchange="this.form.submit()">
      <option disabled selected style="background-color: darkgray;" value={{#if month}}{{month}}{{else}}月份{{/if}}>
        {{#if month}}{{month}}
        {{else}}月份{{/if}}
      </option>
      <option value="01">1月</option>
      <option value="02">2月</option>
      <option value="03">3月</option>
      <option value="04">4月</option>
      <option value="05">5月</option>
      <option value="06">6月</option>
      <option value="07">7月</option>
      <option value="08">8月</option>
      <option value="09">9月</option>
      <option value="10">10月</option>
      <option value="11">11月</option>
      <option value="12">12月</option>
    </select>
  </form>
  <div class="row mt-5 mb-5">
    <h3 class="col-12">總金額:</h3>
    <h1 class="col-12 text-center display-1 text-danger">{{totalAmount}}</h1>
  </div>


  <ul class='list-group'>
    {{#each records}}

    <li class="list-group-item">
      <div class="row ">
        <div class="front-list col-6 ml-0 container d-flex align-item-center justify-content-start ">
          <div class="row">
            <span class="col-auto d-flex align-item-center">
              {{#if this.food}}
              <i class="fas fa-utensils" style="height:40px;width:40px"></i>
              {{/if }}
              {{#if this.home}}
              <i class="fas fa-home" style="height:40px;width:40px"></i>
              {{/if }}
              {{#if this.bus}}
              <i class="fas fa-bus" style="height:40px;width:40px"></i>
              {{/if }}
              {{#if this.smile}}
              <i class="fas fa-smile " style="height:40px;width:40px"></i>
              {{/if }}
              {{#if this.pen}}
              <i class="fas fa-pencil-alt " style="height:40px;width:40px"></i>
              {{/if }}
              <div class="col-auto d-inline-flex flex-column">
                <h4 class="col-auto mb-auto mt-auto ">
                  {{{this.name}}}
                </h4>
                <h6 class="col-auto mb-auto mt-auto">
                  {{this.formated_date}}
                </h6>
              </div>
              <div class="merchant col-auto d-flex align-item-center" style="border-left:2px solid grey ;">
                <h5 class=" text-center text-secondary mt-auto mb-auto"> {{this.merchant}}
                </h5>
              </div>

          </div>
        </div>



        <div class="row	col-6	col-sm-6	col-md-auto	col-lg-auto">
          <h4 class="col-auto mb-auto mt-auto">
            ${{{this.amount}}}
          </h4>
          <div class="flex col-auto">
            <a href="/records/{{{this.id}}}/edit" class='btn btn-primary btn-big'>edit</a> <a
              href="/records/{{{this.id}}}/edit" class='btn btn-primary btn-sm'>edit</a>
            <form method="POST" action="/records/{{{this.id}}}/delete?_method=DELETE" class="d-inline">
              <button type="submit" class='btn btn-danger btn-big'>delete</button>
            </form>
            <form method="POST" action="/records/{{{this.id}}}/delete?_method=DELETE" class="d-inline">
              <button type="submit" class='btn btn-danger btn-sm'>delete</button>
            </form>
          </div>

        </div>
      </div>
    </li>
    {{/each}}
  </ul>


  <a href="/records/new" class="btn btn-outline-secondary btn-block mt-5" style="font-weight: bolder;">Create</a>
</div>